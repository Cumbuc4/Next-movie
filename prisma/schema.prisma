generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             String   @id @default(cuid())
  username       String   @unique
  loginCodeHash  String?  @unique
  email          String?  @unique
  name           String?
  image          String?
  createdAt      DateTime @default(now())
  accounts       Account[]
  sessions       Session[]
  items          ListItem[]
  friendshipsA   Friendship[] @relation("A")
  friendshipsB   Friendship[] @relation("B")
  friendRequestsSent     FriendRequest[] @relation("Requested")
  friendRequestsReceived FriendRequest[] @relation("Received")
  pickHistory      PickHistory[]
  sharedPickHistory SharedPickHistory[] @relation("Picker")
  sharedWith        SharedPickHistory[] @relation("Partner")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ListItem {
  id           String    @id @default(cuid())
  ownerId      String
  type         MediaType
  tmdbId       Int
  title        String
  overview     String?   @db.Text
  posterPath   String?
  backdropPath String?
  releaseDate  DateTime?
  addedAt      DateTime  @default(now())
  watched      Boolean   @default(false)
  owner        User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  picks        PickHistory[]
  sharedPicks  SharedPickHistory[]

  @@unique([ownerId, tmdbId, type])
}

enum MediaType {
  MOVIE
  TV
}

model Friendship {
  id        String   @id @default(cuid())
  aId       String
  bId       String
  createdAt DateTime @default(now())
  a         User     @relation("A", fields: [aId], references: [id], onDelete: Cascade)
  b         User     @relation("B", fields: [bId], references: [id], onDelete: Cascade)

  @@unique([aId, bId])
}

enum FriendRequestStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model FriendRequest {
  id           String               @id @default(cuid())
  requesterId  String
  recipientId  String
  status       FriendRequestStatus  @default(PENDING)
  createdAt    DateTime             @default(now())
  respondedAt  DateTime?
  requester    User                 @relation("Requested", fields: [requesterId], references: [id], onDelete: Cascade)
  recipient    User                 @relation("Received", fields: [recipientId], references: [id], onDelete: Cascade)

  @@unique([requesterId, recipientId])
  @@index([recipientId, status])
}

model PickHistory {
  id       String   @id @default(cuid())
  ownerId  String
  itemId   String
  pickedAt DateTime @default(now())
  owner    User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  item     ListItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model SharedPickHistory {
  id        String   @id @default(cuid())
  pickerId  String
  partnerId String
  itemId    String
  pickedAt  DateTime @default(now())
  picker    User     @relation("Picker", fields: [pickerId], references: [id], onDelete: Cascade)
  partner   User     @relation("Partner", fields: [partnerId], references: [id], onDelete: Cascade)
  item      ListItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model RateLimit {
  key       String   @id
  count     Int
  expiresAt DateTime
  updatedAt DateTime @updatedAt
}
